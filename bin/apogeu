#!/usr/bin/env node

const debug = require('debug')('apogeu:bin');
const express = require('express');
const log = require('winston');

const app = express();

const models = require('../src/models');
const controllers = require('../src/controllers');
const routes = require('../src/routes');

debug('init apogeu');
models()
  .then(controllers)
  .then(routes)
  .then((router) => {
    app.use(router);
    const port = 3000;
    app.listen(port, () => {
      log.info(`Apogeu listening on port ${port}`);
    });
  })
  .catch(log.error);
